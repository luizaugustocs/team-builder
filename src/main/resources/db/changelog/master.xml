<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-role" author="luizaugustocs">
        <preConditions>
            <not>
                <tableExists tableName="role"/>
            </not>
        </preConditions>
        <createTable tableName="role">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="is_default" type="boolean"/>
        </createTable>
    </changeSet>

    <changeSet id="create-table-users" author="luizaugustocs">
        <preConditions>
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>
        <createTable tableName="users">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="display_name" type="varchar(255)"/>
            <column name="avatar_url" type="text"/>
            <column name="location" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-table-team" author="luizaugustocs">
        <preConditions>
            <not>
                <tableExists tableName="team"/>
            </not>
        </preConditions>
        <createTable tableName="team">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_team"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="lead_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_lead_team" referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create-table-membership" author="luizaugustocs">
        <preConditions>
            <not>
                <tableExists tableName="membership"/>
            </not>
        </preConditions>
        <createTable tableName="membership">
            <column name="team_id" type="uuid">
                <constraints nullable="false"  foreignKeyName="fk_member_team" referencedTableName="team"
                             referencedColumnNames="id"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"  foreignKeyName="fk_member_user" referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="role_id" type="uuid">
                <constraints  foreignKeyName="fk_member_role" referencedTableName="role"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="membership" columnNames="team_id, user_id" constraintName="pk_membership"/>
    </changeSet>

    <changeSet id="insert-default-roles" author="luizaugustocs">
        <preConditions>
            <tableExists tableName="role"/>
        </preConditions>
        <insert tableName="role">
            <column name="id" value="e870f742-2627-426e-8287-5bbf391ea9e9"/>
            <column name="name" value="Developer"/>
            <column name="is_default" value="true"/>
        </insert>
        <insert tableName="role">
            <column name="id" value="d5ddba22-54b9-4a16-acfd-84c1f5370567"/>
            <column name="name" value="Product Owner"/>
            <column name="is_default" value="false"/>
        </insert>
        <insert tableName="role">
            <column name="id" value="11e30283-a92a-42fb-add8-b6c9eaf85e29"/>
            <column name="name" value="Tester"/>
            <column name="is_default" value="false"/>
        </insert>
    </changeSet>

</databaseChangeLog>